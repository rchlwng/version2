<script>
    document.addEventListener("turbolinks:load", jQuery(".fittext").fitText())

    var lookbook = document.getElementById('flipbook');
        window.addEventListener('resize', function (e) {
        lookbook.style.width = '';
        lookbook.style.height = '';
        $(lookbook).turn('size', lookbook.clientWidth, lookbook.clientHeight);
    });
    $(lookbook).turn({
        autoCenter: true
    });
    
</script>
